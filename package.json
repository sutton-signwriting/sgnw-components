{
  "name": "@sutton-signwriting/sgnw-components",
  "description": "a javascript package of web components for use with the SignWriting script.",
  "version": "1.0.0-alpha.1",
  "type": "module",
  "customElements": "dist/custom-elements.json",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/sgnw-components/sgnw-components.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "clean": "rimraf src/docs docs/* dist/types dist/collection dist/custom-elements* dist/esm dist/sgnw-components dist/cjs dist/index*",
    "analyze": "cem analyze --stencil --globs 'src/components/*/*.tsx' --outdir dist",
    "postanalyze": "node md-cem.js",
    "predocs": "node md-combine.js",
    "docs": "npm run docs-index && npm run docs-fsw",
    "docs-index": "markdown-to-html --source ./src/docs/index.md --output ./src/docs/index.html --config src/docs.json",
    "docs-fsw": "markdown-to-html --source ./src/docs/fsw.md --output ./src/docs/fsw.html --config src/docs.json",
    "postdocs": "cp ./src/docs/*.html ./docs/.",
    "prebuild": "npm run clean && npm run analyze && npm run docs",
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "server": "cd docs && npx http-server"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@custom-elements-manifest/to-markdown": "^0.1.0",
    "@stencil/core": "^2.17.0",
    "@types/node": "^16.11.38",
    "babel-loader": "^8.2.5",
    "markdown-to-html-cli": "^3.4.12",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "@sutton-signwriting/core": "^1.4.2",
    "@sutton-signwriting/font-ttf": "^1.3.2"
  },
  "license": "MIT"
}
